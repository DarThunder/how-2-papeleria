<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/jsp/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.idar.pdvpapeleria.controllers.CajeroViewController">
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        
        <Label text="Sistema de Punto de Venta" style="-fx-font-weight: bold; -fx-font-size: 24;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ID Producto:" style="-fx-font-weight: bold;"/>
            <TextField fx:id="idProductField" promptText="Ingrese ID del producto" style="-fx-pref-width: 200;"/>
            <Button fx:id="searchButton" text="Agregar (F10)" style="-fx-base: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="deleteButton" text="Eliminar (F12)" style="-fx-base: #F44336; -fx-text-fill: white;"/>
        </HBox>
        
        <TableView fx:id="productosTableView" style="-fx-pref-height: 300;">
            <columns>
                <TableColumn fx:id="productNameCol" text="Producto" prefWidth="200"/>
                <TableColumn fx:id="productCountCol" text="Cantidad" prefWidth="100"/>
                <TableColumn fx:id="productPriceCol" text="Precio Unitario" prefWidth="150"/>
                <TableColumn fx:id="productSubtotalCol" text="Subtotal" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Label fx:id="totalLabel" text="Total: $0.00" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button fx:id="payButton" text="Procesar Pago (F11)" style="-fx-base: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200; -fx-pref-height: 40;"/>
        </HBox>
        
        <VBox spacing="5" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10; -fx-background-color: #f9f9f9;">
            <Label text="Atajos de teclado:" style="-fx-font-weight: bold;"/>
            <Label text="ESC - Limpiar campo"/>
            <Label text="F5/ENTER - Agregar producto"/>
            <Label text="F6 - Eliminar producto"/>
            <Label text="F7 - Procesar pago"/>
            <Label text="F8 - Cancelar pago"/>
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
        </VBox>
    </VBox>
</AnchorPane>
